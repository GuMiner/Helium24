@using System;
@using Helium24.Models;
@using System.Collections.Generic;

@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<Project>>
@model System.Collections.Generic.List<Helium24.Models.Project>

@{
    Layout = "Layouts/RootLayout.cshtml";
    string pageName = "Projects";
}

@section Title {@pageName}

<div class="container-fluid">
        <div class="row justify-content-md-center">
            @foreach (Project project in Model)
            {
                <div class="col-auto px-1 py-1">
                    <div class="card">
                        <a href="@project.ProjectUri" style="position:absolute;top:0;left:0;height:100%;width:100%"></a>
                        <img class="card-img-top img-fluid rounded" alt="Image in card" style="width:320px; height:320px" src="@project.ThumbnailUri" />
                        <div class="card-footer">
                            <div class="row justify-content-between">
                                <div class="col-auto align-self-center px-1">
                                    <a href="@project.ProjectUri" class="text-muted">@project.Title</a>
                                </div>
                                <div class="col-auto align-self-center px-0">
                                    <!-- TODO: This should instead link to all projects done this month.-->
                                    <a href="@project.ProjectUri" class="text-muted">@Html.Partial("/Projects/Common/Base/FormattedDate.cshtml", project.Date)</a>
                                </div>
                            </div>
                            <div class="row">
                                @Html.Partial("/Projects/Common/Base/TagButtons.cshtml", project.Tags)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

