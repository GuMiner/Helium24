@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Helium24.Models.LoginModel>
@model Helium24.Models.LoginModel

@{
    Layout = "Layouts/RootLayout.cshtml";
    string pageName = "Login";

    string nameField = "userName";
    string passwordHash = "passwordHash";

    string generalError = "generalError";
    string startupErrorPrefix = "";
    string startupErrorPostfix = "";
    string registrationLinkText = "";
    @if (Model.MissingUser)
    {
        startupErrorPrefix =
    "The specified user does not exist. Please see the ";
        registrationLinkText = "Registration";
        startupErrorPostfix = " page to create a new account.";
    }
    else if (Model.BadPassword)
    {
        startupErrorPrefix =
    "Invalid password specified. Please try again.";
    }
    else if (Model.BadEmail)
    {
        startupErrorPrefix =
    "Your email was not recognized as a valid email.";
    }
    else if (Model.MissingField)
    {
        startupErrorPrefix =
    "Login requires all fields to be filled in before continuing.";
    }
}

@section Title {@pageName}

<div class="container">
    <h1>@pageName</h1>
    <div class="alert-warning" id="@generalError">@startupErrorPrefix<a href="/Secure/Register" class="alert-link">@registrationLinkText</a>@startupErrorPostfix</div>
    <form method="POST" name="loginForm" role="form">
        <div class="form-group">
            <label for="@nameField">Email</label>
            <input id="@nameField" class="form-control" type="text" name="@nameField" placeholder="Enter your name" />
        </div>
        <div class="form-group">
            <label for="@passwordHash">Password</label>
            <input id="@passwordHash" class="form-control" type="password" name="@passwordHash" placeholder="Password" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="submit">Login</button>
        </div>
    </form>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Content/sha256-1.0/sha256.js"></script>
    
    <script>
        $(document).ready(function (event) {
            $("form[name=loginForm]").submit(function (e) {
                // Hash the password so we aren't sending raw passwords over the network, secure or otherwise.
                $('#@passwordHash').val(Sha256.hash($("#@passwordHash").val()));
            });
        });
    </script>
}