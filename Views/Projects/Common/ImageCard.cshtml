@using Helium24.Models

@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Image>
@model Helium24.Models.Image

<div class="row justify-content-md-center">
    <div class="col-auto">
        <div class="card">
            <img class="card-img-top img-fluid rounded" alt="Image in card" src="@Model.Uri" />
            <div class="card-footer">
                @Model.Title
            </div>
        </div>
    </div>
</div>