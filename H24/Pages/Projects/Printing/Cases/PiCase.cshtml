        <partial name="../../Common/ParagraphEnd.cshtml" />
        <br />
        <partial name="../../Common/ImageCard.cshtml" ,
            model='@new Image("/Blobs/Projects/3DPrinting/Cases/Pi/rpi_lid.jpg", "Raspberry Pi Model B+ Lid")' />
