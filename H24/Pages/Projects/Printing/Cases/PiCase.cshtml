    ViewData["Title"] = @Model.Title;
}

<div class="card">
    <partial name="../../Common/CardHeader.cshtml" for="@Model" />
    <div class="card-body">
        <partial name="../../Common/ImageCard.cshtml" ,
            model='@new Image("/Blobs/Projects/3DPrinting/Cases/Pi/rpi_case.jpg", "Raspberry Pi Model B+ Case")' />
