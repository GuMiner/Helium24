@model Helium.Pages.HardwareProjects.ICard

<div class="card-header">
    <div class="row justify-content-between">
        <div class="col-auto align-self-center">
            <a class="text-muted" href="/HardwareProjects">Hardware Projects</a> - @Model.Card.Title
        </div>
        <div class="col-auto" style="flex: unset;">
            <div class="row">
                <partial name="../../Shared/TagButtons.cshtml" model="@Model.Card.Tags" />
                <div class="col-auto align-self-center">
                    <span class="text-muted"><partial name="../../Shared/FormattedDate.cshtml" model="@Model.Card.Date" /></span>
                </div>
            </div>
        </div>
    </div>
</div>