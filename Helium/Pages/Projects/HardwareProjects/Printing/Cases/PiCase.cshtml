@page
@using Helium.Pages.Projects.Shared
@model PiCaseModel

@{
    ViewData["Title"] = @Model.Card.Title;
}

<div class="container-fluid">
    <partial name="../../../Shared/CardHeader.cshtml" for="@Model" />
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-auto">
                <partial name="../../../Shared/ImageCard.cshtml" ,
                    model='@new Image("/img/hardware-projects/printing/cases/Pi/rpi_case.jpg", "Raspberry Pi Model B+ Case")' />
            </div>
             <div class="col-md-6">
                This case stores a Raspberry Pi, which I had used as a local interface between the router and other IoT devices.
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="col-auto">
                <partial name="../../../Shared/ImageCard.cshtml" ,
                    model='@new Image("/img/hardware-projects/printing/cases/Pi/rpi_lid.jpg", "Raspberry Pi Model B+ Lid")' />
            </div>
            <div class="col-md-6">
                The lid is mostly for aesthetic purposes -- it doesn't tightly attach to the case.
            </div>
        </div>
    </div>
</div>